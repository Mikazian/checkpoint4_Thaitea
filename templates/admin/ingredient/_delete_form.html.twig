<form method="post" action="{{ path('app_admin_ingredient_delete', {'id': ingredient.id }) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer {{ ingredient.name }} ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
	<button class="bg-transparent border-0">
		<a class="icon-link link-tertiary text-decoration-none">
			{{ include('/components/svg/_icon_trash.svg.twig') }}
			Supprimer
		</a>
	</button>
</form>
